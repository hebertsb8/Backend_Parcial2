# =============================================================================
# CONFIGURACIÓN PARA PRODUCCIÓN - DJANGO BACKEND
# Archivo de ejemplo: Copia este archivo como .env y configura los valores
# =============================================================================

# Django Configuration - CRÍTICO
SECRET_KEY=tu-clave-secreta-django-unica-aqui
DEBUG=False
ALLOWED_HOSTS=tu-dominio.com,*.railway.app,localhost,127.0.0.1

# CORS Configuration - PRODUCCIÓN
CORS_ALLOWED_ORIGINS=https://tu-frontend.vercel.app,https://tu-app.railway.app
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# BASE DE DATOS - PRODUCCIÓN (PostgreSQL - Railway)
# =============================================================================
# Railway proporciona DATABASE_URL automáticamente, pero puedes configurarla manualmente
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password

# =============================================================================
# STRIPE - CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# FIREBASE - CONFIGURACIÓN PARA PRODUCCIÓN
# =============================================================================
FIREBASE_CREDENTIALS_PATH=./firebase-credentials-production.json
FIREBASE_PUBLIC_API_KEY=tu-api-key
FIREBASE_AUTH_DOMAIN=tu-proyecto.firebaseapp.com
FIREBASE_PROJECT_ID=tu-proyecto
FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_VAPID_KEY=tu-vapid-key
FIREBASE_CREDENTIALS_BASE64=base64-de-tus-credenciales

# =============================================================================
# GOOGLE CLOUD - CONFIGURACIÓN PARA PRODUCCIÓN
# =============================================================================
GOOGLE_CLOUD_CREDENTIALS_PATH=./google-cloud-credentials-production.json

# =============================================================================
# CACHE - REDIS (OPCIONAL PARA PRODUCCIÓN)
# =============================================================================
REDIS_URL=redis://localhost:6379/1
CACHE_URL=redis://localhost:6379/1

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
ML_MODEL_PATH=./ml_models/
ML_TRAINING_DATA_PATH=./ml_models/training_data/
ENABLE_ML_TRAINING=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000